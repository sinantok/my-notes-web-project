@helper ModalPopup(string id = "myModal", string title = "Modal Title", bool showCloseButton = true)
{
    <!-- Modal -->
    <div class="modal fade" id="@id" name="@id" tabindex="-1" role="dialog" aria-labelledby="@(id + "_label")">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" id="@(id + "_header")">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="@(id + "_label")">@title</h4>
                </div>
                <div class="modal-body" id="@(id + "_body")">
                    @*comment render*@
                </div>
                <div class="modal-footer" id="@(id + "_footer")">
                    @if (showCloseButton)
                    {
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    }
                </div>
            </div>
        </div>
    </div>
}